<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <ImageView
        android:contentDescription="@string/application"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/background"
        android:scaleType="centerCrop" />    

    <Button
        android:id="@+id/server"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/button_vertical_margin"
        android:layout_marginRight="@dimen/button_horizontal_margin"
        android:layout_marginBottom="@dimen/button_vertical_margin"
        android:layout_marginLeft="@dimen/button_horizontal_margin"
        android:text="@string/button_server"
        android:textColor="@android:color/white"
        style="?android:attr/buttonStyle" />

    <Button
        android:id="@+id/client"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@+id/server"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/button_vertical_margin"
        android:layout_marginRight="@dimen/button_horizontal_margin"
        android:layout_marginBottom="@dimen/button_vertical_margin"
        android:layout_marginLeft="@dimen/button_horizontal_margin"
        android:text="@string/button_client"
        android:textColor="@android:color/white"
        style="?android:attr/buttonStyle" />
    
</RelativeLayout>
